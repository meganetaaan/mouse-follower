{
	"name": "@meganetaaan/mouse-follower",
	"private": false,
	"version": "1.0.0",
	"description": "TypeScript library for creating animated sprites that smoothly follow mouse cursor or other targets using physics-based movement",
	"keywords": ["mouse", "follower", "sprite", "animation", "canvas", "physics", "typescript"],
	"author": "meganetaaan",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/meganetaaan/mouse-follower.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://meganetaaan.github.io/mouse-follower/",
	"engines": {
		"node": ">=20.19.0"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"assets",
		"README.md"
	],
	"scripts": {
		"build": "tsc && cp -r assets dist/",
		"test": "vitest run",
		"check:fix": "biome check --fix",
		"prepublishOnly": "pnpm run test && pnpm run build"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@vitest/ui": "^3.2.4",
		"jsdom": "^26.1.0",
		"typescript": "~5.8.3",
		"vitest": "^3.2.4"
	}
}