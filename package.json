{
	"name": "mouse-follower-workspace",
	"private": true,
	"version": "1.0.0",
	"description": "Workspace for mouse-follower library and demo",
	"author": "meganetaaan",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/meganetaaan/mouse-follower.git"
	},
	"homepage": "https://meganetaaan.github.io/mouse-follower/",
	"engines": {
		"node": ">=20.19.0"
	},
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter mouse-follower-demo dev",
		"build": "pnpm --filter @meganetaaan/mouse-follower build && pnpm --filter mouse-follower-demo build",
		"build:lib": "pnpm --filter @meganetaaan/mouse-follower build",
		"build:demo": "NODE_ENV=production GITHUB_PAGES=true pnpm --filter mouse-follower-demo build",
		"test": "pnpm --filter @meganetaaan/mouse-follower test",
		"check:fix": "pnpm --filter @meganetaaan/mouse-follower check:fix && pnpm --filter mouse-follower-demo check:fix",
		"publish:lib": "pnpm --filter @meganetaaan/mouse-follower publish",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "pnpm build:lib && changeset publish"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.5"
	}
}
